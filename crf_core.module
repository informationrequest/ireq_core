/**
 * Implementation of hook_views_query_alter().
 */
function crf_core_views_query_alter(&$view, &$query) {
  if ($view->name == 'requests') {
    if (count($view->style_options['grouping'])) {
      $field = $view->style_options['grouping'][0]['field'];
      $field_alias = $view->field[$field]->field_alias;
    }
    if ($query->orderby[0]['field'] <> 'field_collection_request_field_collection_item__node_revisio') {
      array_unshift($query->orderby, array('field' => 'field_collection_request_field_collection_item__node_revisio', 'direction' => 'ASC'));
    }
  }
}

/*
 * Implements hook_form_alter().
 * - remove filter option for user without audience access
 */
function crf_core_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'views_exposed_form' && $form_state['view']->name == 'requests') {
    if (!user_access('access_internal_ocha_requests')) {
      unset($form['field_request_audience_value']);
      unset($form['#info']['filter-field_request_audience_value']);
    }
  }
}

